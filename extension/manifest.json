{
  "manifest_version": 3,
  "name": "OpenClaw Tools",
  "description": "Private Chrome bridge client for OpenClaw Tools.",
  "version": "0.1.0",
  "permissions": ["contextMenus", "storage", "notifications", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "options_page": "options/options.html",
  "action": {
    "default_title": "OpenClaw Tools"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
